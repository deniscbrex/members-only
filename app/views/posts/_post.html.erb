<table border="1"> 
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th>Author</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td> <%= post.title %> </td>
        <td> <%= post.body %> </td>
        <% if logged_in? %>
          <td> <%= post.user.name %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
